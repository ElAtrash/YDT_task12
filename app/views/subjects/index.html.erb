<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<table class="table table-bordered table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Topic</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.topic %></td>
        <td><%= subject.description %></td>
        <td><%= subject.status %></td>
        <td><%= link_to 'Show', subject %></td>
        <% if policy(subject).update? %>
          <td><%= link_to 'Edit', edit_subject_path(subject)  %></td>
        <% end %>
        <% if policy(subject).destroy? %>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' }  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path if policy(@subjects).create? %>
